<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_title_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地铁六号线 两居室空房出租"/>
    <ImageView
        android:id="@+id/imageview_tuijian_shouye"
        android:layout_width="260dp"
        android:layout_height="180dp"
        android:src="@drawable/one"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/textView_title_index"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4500￥/月   押一付三"
        android:textColor="#aaff2255"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView_title_index"
        android:layout_toEndOf="@id/imageview_tuijian_shouye"/>
</RelativeLayout>