<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.freezufang.MainActivity">
    <FrameLayout
        android:id="@+id/mainContentLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_Main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

            <RadioGroup
                android:layout_alignParentBottom="true"
                android:background="@mipmap/blue_btn_on"
                android:id="@+id/radioGroup_Bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radiobutton_index"
                    style="@style/bottom_style"
                    android:drawableTop="@mipmap/shouye"
                    />
                <RadioButton
                    android:id="@+id/radiobutton_fabu"
                    style="@style/bottom_style"
                    android:checked="true"
                    android:drawableTop="@mipmap/fujin"
                    />
                <RadioButton
                    android:id="@+id/radiobutton_fujin"
                    style="@style/bottom_style"
                    android:drawableTop="@mipmap/fabu"
                    />
                <RadioButton
                    android:id="@+id/radiobutton_wode"
                    style="@style/bottom_style"
                    android:drawableTop="@mipmap/wode"/>
            </RadioGroup>
        </RelativeLayout>
</FrameLayout>

    //侧滑部分
    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fffffccc">
        <TextView
            android:id="@+id/imagehead"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/head"/>
        <LinearLayout
            android:id="@id/drawerLayoutId"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imagehead"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/head_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="待定"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
