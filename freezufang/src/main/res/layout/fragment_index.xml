<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.freezufang.fragment.IndexFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/RelativeLayout_title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/beijing">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:entries="@array/spingarr" />
            <android.support.v7.widget.SearchView
                android:id="@+id/search_id"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_toEndOf="@+id/spinner">
            </android.support.v7.widget.SearchView>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imageview_index_shouye"
            android:layout_width="260dp"
            android:layout_height="160dp"
            android:src="@drawable/wo"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/RelativeLayout_title"/>
        <Button
            android:id="@+id/button_hezu_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_index_shouye"
            android:layout_toLeftOf="@+id/button_zhengzu_index"
            android:layout_marginRight="12dp"
            android:text="合租"/>
        <Button
            android:id="@+id/button_zhengzu_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_index_shouye"
            android:layout_centerHorizontal="true"
            android:text="整租"/>
        <Button
            android:id="@+id/button_duanzu_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_index_shouye"
            android:layout_toRightOf="@+id/button_zhengzu_index"
            android:layout_marginLeft="12dp"
            android:text="短租"/>
        <TextView
            android:id="@+id/textView_tuijian_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button_zhengzu_index"
            android:text="为你推荐："
            android:textColor="#99123456"
            android:textSize="24dp"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/card_tuijian_index"
            android:layout_width="260dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView_tuijian_index">
            <include layout="@layout/tuijian"></include>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>
